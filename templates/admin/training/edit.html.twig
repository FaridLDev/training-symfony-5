{% extends '/admin/base.html.twig' %}

{% block title %}Gestion des formations{% endblock %}

{% block body %}

{{ form_start(form)}}

<div class="container-fluid mt-4">
<h1>Gestion des Formations</h1>
    <div class="row">
        <div class="col-md-6">{{ form_row(form.title) }}</div>
        <div class="col-md-6">{{ form_row(form.startDate) }}</div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">{{ form_row(form.candidates) }}</div>
        <div class="col-md-6">
        <label>Nbr participants</label>
        {% if editMode %}
        <input class="form-control"  placeholder="{{ participants.clients.count }}" readonly>
        {% else %}
         <input class="form-control"  placeholder="0" readonly>
        {% endif %}
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">{{ form_row(form.location) }}</div>
       <div class="col-md-6">{{ form_row(form.courses) }}
       <a href="{{ path('course_new') }}" class="btn btn-info">Ajouter</a>
       </div>

    </div>

    <div class="row mt-3">
        <div class="col-md-6">{{ form_row(form.picture) }}</div>
        <div class="col-md-12">{{ form_row(form.description) }}</div>
    </div>

<button type="submit" class="btn btn-primary">
{% if editMode %}
    Enregistrer les modifications
{% else %}
    Ajouter un nouvel article
{% endif %}
</button>
<a href="{{ path('admin_training_index') }}" class="btn btn-secondary">Annuler</a>
</div>
{{form_end(form)}}
{% endblock %}

